    var callback = function() {
      document.getElementsByTagName('body')[0].ontouchstart = function() {
        const mobileVideoElement = document.getElementById('top-video-mobile');
        if (!mobileVideoElement.playing) {
          mobileVideoElement.play();
        }
      }
    }

